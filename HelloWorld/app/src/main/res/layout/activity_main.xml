<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="106px"
        android:orientation="horizontal"
        tools:context=".MainActivity">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="106px"
        android:orientation="horizontal"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/zero"
            android:layout_width="200px"
            android:layout_height="100px"
            android:layout_weight="1"
            android:text="0" />

        <Button
            android:id="@+id/one"
            android:layout_width="200px"
            android:layout_height="100px"
            android:layout_weight="1"
            android:text="1" />

        <Button
            android:id="@+id/two"
            android:layout_width="200px"
            android:layout_height="100px"
            android:layout_weight="1"
            android:text="2" />


        <Button
            android:id="@+id/three"
            android:layout_width="200px"
            android:layout_height="100px"
            android:layout_weight="1"
            android:text="3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="106px"
        android:orientation="horizontal"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/four"
            android:layout_width="200px"
            android:layout_height="100px"
            android:layout_weight="1"
            android:text="4" />

        <Button
            android:id="@+id/five"
            android:layout_width="200px"
            android:layout_height="100px"
            android:layout_weight="1"
            android:text="5" />

        <Button
            android:id="@+id/six"
            android:layout_width="200px"
            android:layout_height="100px"
            android:layout_weight="1"
            android:text="6" />

        <Button
            android:id="@+id/seven"
            android:layout_width="200px"
            android:layout_height="100px"
            android:layout_weight="1"
            android:text="7" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="106px"
        android:orientation="horizontal"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/eight"
            android:layout_width="200px"
            android:layout_height="100px"
            android:layout_weight="1"
            android:text="8" />

        <Button
            android:id="@+id/nine"
            android:layout_width="200px"
            android:layout_height="100px"
            android:layout_weight="1"
            android:text="9" />


        <Button
            android:id="@+id/addition"
            android:layout_width="200px"
            android:layout_height="100px"
            android:layout_weight="1"
            android:text="+" />

        <Button
            android:id="@+id/subtraction"
            android:layout_width="200px"
            android:layout_height="100px"
            android:layout_weight="1"
            android:text="-" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="106px"
        android:orientation="horizontal"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/multiplication"
            android:layout_width="200px"
            android:layout_height="100px"
            android:layout_weight="1"
            android:text="*" />

        <Button
            android:id="@+id/division"
            android:layout_width="200px"
            android:layout_height="100px"
            android:layout_weight="1"
            android:text="/" />

        <Button
            android:id="@+id/clear"
            android:layout_width="200px"
            android:layout_height="100px"
            android:layout_weight="1"
            android:text="C" />

        <Button
            android:id="@+id/result"
            android:layout_width="200px"
            android:layout_height="100px"
            android:layout_weight="1"
            android:text="=" />

    </LinearLayout>

    <TextView
      android:id="@+id/output"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text=""
      android:textSize="80px"
      android:textColor="#FA7843"
      android:textAlignment="textEnd" />

</LinearLayout>